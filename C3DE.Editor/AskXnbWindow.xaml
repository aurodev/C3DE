<Window x:Class="C3DE.Editor.AskXnbWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="XNB Type Selector" Height="260" Width="200" WindowStyle="ToolWindow" ResizeMode="NoResize" Icon="Icon.ico" ShowInTaskbar="False" Topmost="True" WindowStartupLocation="CenterScreen" ToolTip="Choose the type of this asset">
    <StackPanel Orientation="Vertical" Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <TextBlock Text="Asset.xnb" TextAlignment="Center" FontSize="14" x:Name="AskTitle" />
        <Separator />
        <RadioButton GroupName="xnb" Content="Effect" x:Name="AskEffect"  Margin="15, 10, 0, 5" />
        <RadioButton GroupName="xnb" Content="Model" x:Name="AskModel" Margin="15, 5, 0, 5" />
        <RadioButton GroupName="xnb" Content="SpriteFont" x:Name="AskSpriteFont" Margin="15, 5, 0, 5" />
        <RadioButton GroupName="xnb" Content="SoundEffect" x:Name="AskSoundEffect" Margin="15, 5, 0, 5" />
        <RadioButton GroupName="xnb" Content="Song" x:Name="AskSong" Margin="15, 5, 0, 5" />
        <RadioButton GroupName="xnb" Content="Texture2D" x:Name="AskTexture2D" Margin="15, 5, 0, 10" />
        <Separator />
        <Button Content="Ok" Width="120" Click="Button_Click" Margin="0, 5, 0, 0" />
    </StackPanel>
</Window>
