<Window x:Class="C3DE.Editor.AskXnbWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="XNB Type Selector" Height="250" Width="200" WindowStyle="ToolWindow" ResizeMode="NoResize" Icon="Icon.ico" ShowInTaskbar="False" Topmost="True" WindowStartupLocation="CenterScreen" ToolTip="Choose the type of this asset">
    <Window.Resources>
        <Style TargetType="ListBoxItem" BasedOn="{ StaticResource { x:Type ListBoxItem}}">
            <Setter Property="Height" Value="30" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
    </Window.Resources>
    <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <TextBlock Text="Asset.xnb" TextAlignment="Center" FontSize="14" x:Name="AskTitle" />
        <Separator />
        <ListBox Margin="5, 0, 5, 0" SelectionChanged="ListBox_SelectionChanged">
            <ListBoxItem Content="Effect" />
            <ListBoxItem Content="Model" />
            <ListBoxItem Content="SpriteFont" />
            <ListBoxItem Content="SoundEffect" />
            <ListBoxItem Content="Song" />
            <ListBoxItem Content="Texture2D" />
        </ListBox>
    </StackPanel>
</Window>
