<UserControl x:Class="C3DE.Editor.Controls.ColliderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DesignWidth="250" Height="180">
    <Border BorderThickness="1" BorderBrush="LightGray" Margin="2">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch">
            <StackPanel Orientation="Horizontal">
                <CheckBox IsChecked="{Binding Enabled}" VerticalAlignment="Center" Margin="5, 0, 10, 0" />
                <Label Content="Collider" />
            </StackPanel>
            <Separator Margin="5, 2, 5, 2" />
            <StackPanel Orientation="Horizontal" Margin="0, 5, 0, 0">
                <Label Content="Type" Style="{StaticResource Control_LeftText}" Width="65" />
                <ComboBox Width="175" SelectedIndex="{Binding ColliderType}">
                    <ComboBoxItem>Box Collider</ComboBoxItem>
                    <ComboBoxItem>Sphere Collider</ComboBoxItem>
                </ComboBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Style="{StaticResource Control_LeftText}" Content="Size" Width="65" />
                <TextBox Style="{StaticResource Vector3Input}" Text="{Binding SizeX}" />
                <TextBox Style="{StaticResource Vector3Input}" Text="{Binding SizeY}" />
                <TextBox Style="{StaticResource Vector3Input}" Text="{Binding SizeZ}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Style="{StaticResource Control_LeftText}" Content="Center" Width="65" />
                <TextBox Style="{StaticResource Vector3Input}" Text="{Binding CenterX}" />
                <TextBox Style="{StaticResource Vector3Input}" Text="{Binding CenterY}" />
                <TextBox Style="{StaticResource Vector3Input}" Text="{Binding CenterZ}" />
            </StackPanel>
            <Separator Margin="5" />
            <StackPanel Orientation="Vertical" Margin="5">
                <CheckBox Content="Is Pickable" IsChecked="{Binding IsPickable}" Margin="0, 0, 0, 5" />
                <CheckBox Content="Is Trigger" IsChecked="{Binding IsTrigger}" />
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
